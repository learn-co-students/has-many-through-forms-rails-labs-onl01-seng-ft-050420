<%=form_for @post do |f|%>
  <p>
    <%=f.label :title%>
    <%=f.text_field :title%>
  </p>

  <p>
    <%=f.label :content %>
    <%=f.text_field :content%>
  </p>
  <h1>Categories</h1>
  
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %> <br>

  <%= f.fields_for :categories do |categ| %>
    <%= categ.label :name %>
    <%= categ.text_field :name %>
  <% end %> <br>

  

  
  
  
  <%=f.submit%>
<%end%>




