
<%= form_for @post do |f| %>
    <%= f.label "Title" %>
    <%= f.text_field :title%>
    <br>

    <%= f.label "Content" %>
    <%= f.text_field :content%>
    <br>

    <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>

    <%= f.fields_for :categories do |category_form| %>
        <%= category_form.label :name %>
        <%= category_form.text_field :name %>
    <% end %>
    <br>

    <%= f.submit %>
<% end %>